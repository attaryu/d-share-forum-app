{
    "env": {
        "browser": true,
        "es2021": true,
        "jest/globals": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "jest"
    ],
    "rules": {
        "no-alert": "off",
        "linebreak-style": ["error", "windows"],
        "consistent-return": "off",
        "react/jsx-props-no-spreading": "off",
        "global-require": 0 
    }
}
